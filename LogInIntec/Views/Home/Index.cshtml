@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class= "container">
    <div class="row text-center">
        <div class="col bg-success mx-auto">
            <div class="form-group">
                <img src="~/Images/logo.png" alt="Logo !ntec" width="200" height="150" />
                <h1 class="h2">Inicio de sesión</h1>
            </div>
            <form method="post" id="contactForm" name="contactForm" class="contactForm">
                <div class="form-group">
                    <label for="user">Usuario</label>
                    <input type="text" name="user" id="user" class="form-control" placeholder="Ingrese su usuario" />
                </div>
                <div class="form-group">
                    <label for="password">Contarseña</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Ingrese su contraseña" />
                </div>
                <div>
                    <a href="#"><p>He olvidado mi usuario y/o contraseña</p></a>
                </div>
                <button class="btn btn-success">Inicio</button>
            </form>
        </div>
    </div>
</div>